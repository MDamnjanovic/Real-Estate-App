@using Realty.Entities
@model HighlightedRealtiesViewModel

                    <div class="container-fluid position-relative">
                            <div id="owlCarouselOffers" class="owl-carousel owl-theme">

                                                        @for(int i = 0; i < Model.Realties.Count();i++)
                                                            {
                                                        <div class="item" id=@Model.Realties[i].Id onclick="location.href='@Url.Action("DisplayRealty", "Home", new {realtyId =@Model.Realties[i].Id})'"
                                                        style="position:relative; width: auto; height:180px; color:white; background-color:rgb(0 0 0 / 0.1); background-size:cover; border:2px double rgb(0 0 0 / 0.7);border-radius:10px;">
                                                        <img src="@Model.ImageFilePaths[i]" style="position:absolute;height:100%;width:100%; border-radius:10px;filter:brightness(75%)">
                                                        <div class="header" style="position:absolute;text-align:center; font-size: 1.1EM; font-family: Verdana;">@Html.DisplayFor(modelItem => @Model.Realties[i].Location)</div>
                                                        <div class="caption" style="position:absolute;top:55px;left:65px; font-size:1.5EM;">@Html.DisplayFor(modelItem => @Model.Realties[i].Price) €</div>
                                                        <div class="footer" style="position:absolute;">
                                                        <div class="caption" style="position:absolute; left:20px;bottom:2px; font-size: 1.1EM; font-family: Verdana;">@Html.DisplayFor(modelItem => @Model.Realties[i].SquareMeters) m2</div>
                                                        <div class="caption" style="position:absolute; right:20px;bottom:2px; font-size: 1.1EM; font-family: Verdana;">@Html.DisplayFor(modelItem => @Model.Realties[i].SaleOrRent)</div>
                                                        </div>
                                                        </div>
                                                             }
                            </div> 
                     </div>
