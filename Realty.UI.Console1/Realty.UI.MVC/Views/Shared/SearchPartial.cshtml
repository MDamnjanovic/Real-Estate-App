@model Realty.Entities.RealtySearchEntities
<form asp-controller="Home" asp-action="Search" method="get" class="ng-untouched ng-pristine ng-valid ng-star-inserted" style="background-color:transparent; margin:15px;">
                                <div class="row" style=" display:inline-flex; margin-bottom:10px;">
                                    <div class="col-md-3">
                                                <select asp-for="@Model.SaleOrRent" class="form-control">
                                                <option>
                                                    Rent
                                                </option>
                                                <option>
                                                    Sale
                                                </option>
                                            </select>
                                            <span asp-validation-for="@Model.SaleOrRent" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-3">
                                            <select  asp-for="@Model.ObjectType" class="form-control">
                                                <option>
                                                    Apartment
                                                </option>
                                                <option>
                                                    House
                                                </option>
                                                <option>
                                                    Office Space
                                                </option>
                                                <option>
                                                    Garage/Parking Spaces
                                                </option>
                                            </select>
                                            <span asp-validation-for="@Model.ObjectType" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-3">
                                        <input asp-for="@Model.SquareMetersFrom" class="form-control" placeholder="Square area from"
                                        />
                                        <span asp-validation-for="@Model.SquareMetersFrom" class="text-danger"></span>
                                    </div>                            
                                    <div class="col-md-3">
                                        <input asp-for="@Model.SquareMetersTo" class="form-control" placeholder="Square area to"/>
                                        <span asp-validation-for="@Model.SquareMetersTo" class="text-danger"></span>
                                    </div>
                                    </div>
                                    <div class="row" style="display:inline-flex;">
                                
                                    <div class="col-md-3">
                                        <input asp-for="@Model.PriceFrom" class="form-control" placeholder="Price from" />
                                        <span asp-validation-for="@Model.PriceFrom" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-3">
                                        <input asp-for="@Model.PriceTo" class="form-control" placeholder="Price to"/>
                                        <span asp-validation-for="@Model.PriceTo" class="text-danger"></span>
                                    </div>
                                        <div class="col-md-3">
                                        <input  asp-for="@Model.Location" class="form-control" placeholder="Type location.."/>
                                        <span asp-validation-for="@Model.Location" class="text-danger"></span>
                                        </div>
                                    <div class="col-md-3">
                                        <button id="btnSearch" type="submit" class="btn btn-success">Search</button>
                                    </div>
                                    </div>
                            </form>

